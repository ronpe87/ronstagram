- content_for(:title) { user.username }
.profilePage
  .profilePage_image.show-profile-form
    = image_tag user.avatar_image
  .profilePage_count
    .profilePage_count_photos
      .count
        %p= user.photos_count
      .count_title
        %p= 'Photos'
    .profilePage_count_following#follower_count
      = link_to account_followings_path(user) do
        .count
          %p= user.followings_count
        .count_title
          %p= 'Following'
    .profilePage_count_follower#follower_count
      = link_to account_follows_path(user) do
        .count
          %p= user.followers_count
        .count_title
          %p= 'Follower'
  .profilePage_actionButton#follow-form
    - if user == current_user
      .profilePage_image_change
        = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
          .profile-file-area
            = f.file_field :avatar
          = f.submit '保存', class: 'btn-primary'
    - else
      .profilePage_followbtn_following.hidden.following
        %p Following
      .profilePage_followbtn_unfollowing.hidden.follow
        %p Follow


