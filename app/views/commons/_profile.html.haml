- content_for(:title) { current_user.username }
.container
  .profilePage
    .profilePage_user
      .profilePage_user_image.show-profile-form
        = image_tag user.avatar_image
      .profilePage_user_actionButton#follow-form
        - if user == current_user
          .profilePage_user_image_change
            = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
              .profile-file-area
                = f.file_field :avatar
              = f.submit '保存', class: 'btn-primary'
        - else
          .profilePage_followbtn_following.hidden.following
            %p Following
          .profilePage_followbtn_unfollowing.hidden.follow
            %p Follow
  .profilePage_following_count
    = link_to account_followings_path(user) do
      %p= user.followings_count
    = link_to account_follows_path(user) do
      %p= user.followers_count
