!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Ronstagram
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", :rel => "stylesheet"}/
  %body
    - if !current_page?(new_user_session_path) && !current_page?(new_user_registration_path)
      %header.header
        .header_left
          - if !current_page?(root_path)
            = link_to 'javascript:history.back()' do
              = image_tag 'back.png'
          - if current_page?(root_path)
            = link_to new_photo_path do
              = image_tag 'camera.png'
        .header_title= content_for?(:title) ? yield(:title) : "Ronstagram"
        .header_right
          - if user_signed_in?
            .dropdown
              = image_tag 'default-avatar.png'
              .dropdown-content
                = link_to 'プロフィール', profile_path
                = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
          - else
            = link_to 'ログイン', new_user_session_path, class: 'header_loginBtn'
    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{:class => key}= value
    %p.notice= notice
    %p.alert= alert
    = yield
